<!doctype html>
<html lang="en">
<% include partials/_head %>
<body>
<% include partials/_top-bar %>

<div >
    <div class="grid-x grid-margin-x grid-padding-x grid-padding-y" >
        <% for (let res of resources){ %>

          <div class="card cell big-3"  style="width: 300px;">
            <div class="card-divider">
                <h4><%= res.title %></h4>
            </div>
            <img class="thumbnail" alt="Resource image" src="http://via.placeholder.com/150x150" />
            <div class="card-divider card-section" style="background:white; border:1px solid lightgrey;">
              <p><%= res.description %></p>
              <!-- <a class="button expanded" target="_blank" href="<%=res.URL %>" >Read More</a> -->
            </div>
            <div style="display: flex; padding-left:15px; ">
                <a data-res_id="<%=res.resource_id%>" class="like-button ">
                    <i class="far fa-thumbs-up "></i>
                </a>
                <span><i class="far fa-star"></i></span>
            </div>
 
          </div>
        <% } %>
        </div>
   
  <div class="grid-x grid-margin-x grid-padding-x grid-padding-y comment-section" style="display: flex; flex-direction:column; padding:40px;">
      <h3>Comments (<%= Object.keys(userObj).length %>)</h3>
  <% for (let index in userObj ){ %>
     
  <div class="author">
    <img src="https://placehold.it/50x50" alt="">
    <div class="name1">
      <h5><a href=""><%= userObj[index].userName%></a></h5>
       
    </div>
  </div>
  <div class="text">
    <p><%=userObj[index].commentText%></p>
  </div>
 
 
 
<% } %>
<form  action="/resources/<%=resources[0].resource_id%>/comments"
  method="POST">
    <div class="box">
      <div class="row">
        <div class="small-12 medium-6 larg-6 column" style="border:1px solid lightgrey;">
          <h4>Leave a Comment</h4>
          <label>Comment
            <textarea rows="5" name="comment_text" type="text" style="width:98%; margin: 0 auto;"></textarea>
          </label>
          <button class="button expanded" style="width:10%; margin: 0 auto; border-radius: 2px;">Submit</button>
        </div>
      </div>
    </div>
  </form>

</div>

 